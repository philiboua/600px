!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no", :name => "viewport"}/
    %title 600px - Take your skills to the next level
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %link{:href => "https://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900", :rel => "stylesheet", :type => "text/css"}

  .navigation_wrapper
    .container.navigation.clearfix
      .wrapper
        %h3.brand-logo
          600px
        %ul.navigation-item.pull-left
          %li
            = link_to root_path do  
              %i.fa.fa-home.fa-1x  
              Home     
          %li
            = link_to root_path do
              %i.fa.fa-picture-o.fa-1x.span 
              Discover
          %li
            = link_to root_path do
              %i.fa.fa-comments.fa-1x 
              Groups
        %ul.profile-item.pull-right
          %li.dropdown
            - if user_signed_in?
              %button#dropdownMenu1.btn.btn-profile.dropdown-toggle.user-name{"aria-expanded" => "true", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                = current_user.profile.first_name 
                = current_user.profile.last_name
                %span.caret
              %ul.dropdown-menu{"aria-labelledby" => "dropdownMenu1"}
                %li
                  = link_to 'view profile', profile_path(current_user)
                %li
                  = link_to 'log out', destroy_user_session_path, method: :delete
            - else 
              = link_to "sign in", new_user_session_path, class: 'user-name'

          %li
            = link_to new_photo_path, class: 'upload-photo' do 
              .btn.btn-upload{style: 'border-radius: 0px;'}
                %i.fa.fa-upload.fa-1x.upload-item 
                  Upload
              
  .navigation-mobile-wrapper
    %nav.navbar.navbar-inverse{:role => "navigation"}
      .navbar-header
        %button.navbar-toggle{"data-target" => "#navbarCollapse", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{:href => '/photos'} 600px
      #navbarCollapse.collapse.navbar-collapse
        %ul.nav.navbar-nav
          - if user_signed_in?
            %li.link_nav_menu
              = link_to 'profile', profile_path(current_user)
            %li.link_nav_menu
              = link_to 'Log out', destroy_user_session_path, method: :delete
          %li.link_nav_menu
            = link_to 'Upload new photo', new_photo_path
          
          
            


  %body
    = yield