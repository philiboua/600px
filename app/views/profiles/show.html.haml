.container-fluid
  .row
    .col-xs-12
      .profile-header
        .cover-photo
          .cover-wrap
            .image
        .profile-image
          .avatar-wrapper
            .avatar
              = image_tag('default-user.png', class: 'image-profile')
        .profile-buttons
          .wrapper
            = link_to 'Complete Your Profile', edit_profile_path(@profile), class: 'btn btn-default'

        .profile-info
          %ul.list-unstyled
            %li
              = @profile.first_name
            %li
              = @profile.last_name
            %li
              = @profile.location